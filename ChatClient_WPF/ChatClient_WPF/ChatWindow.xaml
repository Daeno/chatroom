        <ListView x:Name="userListview" HorizontalAlignment="Left" Height="272" Margin="633,34,0,0" VerticalAlignment="Top" Width="186">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
